<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easydeals"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <receiver android:name=".AlarmReceiver"></receiver>
        <activity
            android:name=".implementation.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".implementation.FbPageActivity"
            android:label="@string/fbPage" >
        </activity>
        <activity
            android:name=".implementation.RegisterActivity"
            android:label="@string/registration">
        </activity>
        <activity
            android:name=".implementation.SignInActivity"
            android:label="@string/signinTitle">
        </activity>
		<activity
            android:name=".implementation.UserHomePageActivity"
            android:label="@string/userHome"            >
        </activity>
        <activity
            android:name=".implementation.UserInterestActivity"
            android:label="@string/userInterest">
        </activity>
        <activity
            android:name=".implementation.RegCompleteActivity"
            android:label="@string/userHome">
        </activity>
        <activity
            android:name=".implementation.AdNotification">
        </activity>
		<activity
		    android:name=".implementation.NotificationView">
		</activity>     
		<activity
		    android:name=".implementation.UserLocationUpdate">
		</activity>
		<activity
		    android:name=".implementation.CardDetailsCollectionActivity"
		    android:label="@string/cardDetails">
		</activity>
		<activity
		    android:name=".implementation.EditUser"
		    android:label="@string/editUserTitle">
		</activity>
		<meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
       <activity android:name="com.facebook.LoginActivity"/>
		
    </application>

</manifest>
