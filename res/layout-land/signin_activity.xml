<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal" >

    <EditText
        android:id="@+id/pwdEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pwdText"
        android:layout_alignLeft="@+id/emailEdit"
        android:ems="10"
        android:hint="@string/pwdHint"
        android:inputType="textPassword"
        android:textColor="@color/blue"
        android:typeface="serif" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="@string/forgotPwd"
        android:textColor="@color/yellow"
        android:typeface="serif" />

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginBtn"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="@string/unamehint"
        android:inputType="textEmailAddress"
        android:textColor="@color/blue"
        android:typeface="serif" />

    <TextView
        android:id="@+id/pwdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailEdit"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/emailEdit"
        android:text="@string/pwdText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/yellow"
        android:typeface="serif" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forgotPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_button"
        android:text="@string/login"
        android:typeface="serif" />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/emailEdit"
        android:layout_alignRight="@+id/pwdText"
        android:text="@string/unameText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/yellow"
        android:typeface="serif" />

</RelativeLayout>
